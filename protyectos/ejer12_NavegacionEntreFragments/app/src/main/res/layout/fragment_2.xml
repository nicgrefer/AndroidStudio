<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_datoRecibido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dato recivido"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_datoAEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agrega dato" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btt_avanzar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avanzar" />

    <Button
        android:id="@+id/btt_retroceder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REtroceder" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="right"
        android:text="frag: 2"
        android:textSize="16sp" />

</LinearLayout>